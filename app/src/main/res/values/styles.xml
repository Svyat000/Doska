<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- values/styles.xml -->
    <style name="TextAppearance.Account.Email" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/t_primary</item>
        <item name="colorPrimaryDark">@color/t_primary_dark</item>
        <item name="android:windowBackground">@color/t_background</item>
        <item name="colorSurface">@color/t_surface</item>
        <item name="android:textColorPrimary">@color/t_on_surface</item>
    </style>

    <style name="TNavigationView" parent="Widget.Material3.NavigationView">
        <item name="android:layout_marginTop">?attr/actionBarSize</item>
        <item name="itemIconTint">@color/t_on_surface</item>
        <item name="itemTextColor">@color/t_on_surface</item>
        <item name="android:background">@color/t_surface</item>
        <item name="itemRippleColor">@color/t_primary</item>
        <item name="shapeAppearanceOverlay">@style/NavItemShapeAppearance</item>
    </style>

    <style name="CircleImageView" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.NavItem" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="NavItemShapeAppearance" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="TMenuStyle" parent="Widget.Material3.NavigationView">
        <item name="itemIconTint">@color/t_menu_icon_tint</item>
        <item name="itemTextColor">@color/t_menu_text_color</item>
        <item name="itemShapeAppearanceOverlay">@style/NavItemShapeAppearance</item>
        <item name="itemRippleColor">@color/t_ripple_color</item>
    </style>

</resources>