<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- values/styles.xml -->
    <style name="TextAppearance.Account.Email" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/telegram_primary</item>
        <item name="colorPrimaryDark">@color/telegram_primary_dark</item>
        <item name="android:windowBackground">@color/telegram_background</item>
        <item name="colorSurface">@color/telegram_surface</item>
        <item name="android:textColorPrimary">@color/telegram_on_surface</item>
    </style>

    <style name="TelegramNavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="android:layout_marginTop">?attr/actionBarSize</item>
        <item name="itemIconTint">@color/telegram_on_surface</item>
        <item name="itemTextColor">@color/telegram_on_surface</item>
        <item name="android:background">@color/telegram_surface</item>
        <item name="itemRippleColor">@color/telegram_primary</item>
        <item name="itemShapeFillColor">@color/telegram_surface</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.NavItem" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="NavItemShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="TelegramMenuStyle" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemIconTint">@color/telegram_menu_icon_tint</item>
        <item name="itemTextColor">@color/telegram_menu_text_color</item>
        <item name="itemBackground">@drawable/menu_item_background</item>
    </style>

</resources>